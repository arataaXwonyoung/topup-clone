# ==================================
# PRODUCTION ENVIRONMENT VARIABLES
# ==================================

# Basic Laravel Configuration
APP_NAME="Takapedia - Game Top-Up Platform"
APP_ENV=production
APP_KEY= # php artisan key:generate
APP_DEBUG=false
APP_URL=https://yourdomain.com

# Database (MySQL/PostgreSQL for production)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=takapedia_production
DB_USERNAME=takapedia_user
DB_PASSWORD=strong_password_here

# Redis for Caching & Queues
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration (for notifications)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=your_mailgun_username
MAIL_PASSWORD=your_mailgun_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# ===========================
# PAYMENT GATEWAY SETTINGS
# ===========================

# Midtrans Configuration
PAYMENT_PROVIDER=midtrans
MIDTRANS_SERVER_KEY=SB-Mid-server-YOUR_SERVER_KEY  # Sandbox: SB-Mid-server- | Production: Mid-server-
MIDTRANS_CLIENT_KEY=SB-Mid-client-YOUR_CLIENT_KEY  # Sandbox: SB-Mid-client- | Production: Mid-client-
MIDTRANS_IS_PRODUCTION=false  # Set to true for production
MIDTRANS_MERCHANT_ID=G123456789

# Xendit Configuration (Alternative)
XENDIT_SECRET_KEY=xnd_development_YOUR_SECRET_KEY  # Production: xnd_production_
XENDIT_PUBLIC_KEY=xnd_public_development_YOUR_PUBLIC_KEY
XENDIT_CALLBACK_TOKEN=your_webhook_verification_token
XENDIT_IS_PRODUCTION=false

# Tripay Configuration (Alternative)
TRIPAY_API_KEY=DEV-TR-YOUR_API_KEY  # Production: remove DEV-
TRIPAY_PRIVATE_KEY=your_private_key_here
TRIPAY_MERCHANT_CODE=T1234
TRIPAY_IS_PRODUCTION=false

# ============================
# GAME PROVIDER API SETTINGS
# ============================

# Mobile Legends API
ML_API_URL=https://api.mobilelegends.com/v1
ML_API_KEY=your_ml_api_key
ML_MERCHANT_ID=your_ml_merchant_id

# Free Fire API  
FF_API_URL=https://api.freefire.com/v1
FF_API_KEY=your_ff_api_key
FF_MERCHANT_ID=your_ff_merchant_id

# PUBG Mobile API
PUBG_API_URL=https://api.pubgmobile.com/v1
PUBG_API_KEY=your_pubg_api_key
PUBG_MERCHANT_ID=your_pubg_merchant_id

# ========================
# SECURITY SETTINGS
# ========================

# JWT Token for API
JWT_SECRET=your_jwt_secret_key_here

# Session Security
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# HTTPS Security Headers
FORCE_HTTPS=true
SECURE_COOKIES=true

# ========================
# THIRD PARTY SERVICES
# ========================

# WhatsApp API for notifications
WHATSAPP_API_URL=https://api.whatsapp.com/send
WHATSAPP_API_KEY=your_wa_api_key

# SMS Gateway
SMS_PROVIDER=twillio
TWILLIO_SID=your_twillio_sid
TWILLIO_TOKEN=your_twillio_token
TWILLIO_FROM=+1234567890

# Firebase for Push Notifications
FIREBASE_SERVER_KEY=your_firebase_server_key
FIREBASE_SENDER_ID=your_firebase_sender_id

# Google Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Cloudflare (if using)
CLOUDFLARE_API_TOKEN=your_cloudflare_token
CLOUDFLARE_ZONE_ID=your_zone_id

# ========================
# MONITORING & LOGGING
# ========================

# Sentry for Error Tracking
SENTRY_LARAVEL_DSN=https://your_sentry_dsn_here

# Log Channel
LOG_CHANNEL=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# ========================
# FILE STORAGE
# ========================

# AWS S3 for file storage
FILESYSTEM_DISK=s3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=ap-southeast-1
AWS_BUCKET=takapedia-storage
AWS_USE_PATH_STYLE_ENDPOINT=false

# Or use local storage
# FILESYSTEM_DISK=local

# ========================
# OPTIMIZATION
# ========================

# Config Caching
CONFIG_CACHE_DRIVER=redis

# Route Caching  
ROUTE_CACHE_DRIVER=redis

# View Caching
VIEW_CACHE_DRIVER=redis

# ========================
# BACKUP SETTINGS
# ========================
BACKUP_DISK=s3
BACKUP_MYSQL_DUMP_PATH=/usr/bin/mysqldump